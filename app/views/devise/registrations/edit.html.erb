
      
<div class="container">
        <div class="row">
          <div class="col-lg-12 card-header">
            <span><h2><%= current_user.first_name %> <%= current_user.last_name %></h2></span>
            <br>
            <sub class="card-title"><b>To update your account: Make you changes, enter your password, click update.</b></sub>
          </div>

          <div class="col-lg-3">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= devise_error_messages! %>

            <div class="field">
              <%= f.label :first_name %>:<br>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <br>
              <%= f.label :last_name %>:<br>
              <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <br>
              <%= f.label :location %>:<br>
              <%= f.text_field :location, autofocus: true, autocomplete: "location" %>
            </div>

            <div class="field">
              <br>
              <%= f.label :avatar %>:<br>
              <%= f.text_field :avatar, autofocus: true, autocomplete: "avatar" %>
            </div>
          </div>

          <div class="col-lg-9">
            <div class="field"><br>
              <%= f.label :bio, 'About Me:'%><br>
              <%= f.text_area :bio, :cols => 40, :rows => 10 , autofocus: true, autocomplete: "bio" %>
            </div>
          </div>

          <br><br>

          <div class="col-lg-12">
            <br>
            <div class="field">
              <%= f.label :email %><br>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <br>
            <div class="field">
              <sub><i>(leave blank if you don't want to change it)</i></sub><br>
              <%= f.label :password, 'New Password' %> <br>
              <%= f.password_field :password, autocomplete: "new-password" %>
              
              <sub><% if @minimum_password_length %>
                <em><%= @minimum_password_length %> characters minimum</em>
              <% end %></sub>
            </div>

            <br>
            <div class="field">
              <%= f.label :password_confirmation %><br>
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>


            <br>
            <div class="field">
              <%= f.label :current_password %> <br>
              <%= f.password_field :current_password, autocomplete: "current-password" %>
              <sub><i>(to confirm your changes)</i></sub>
            </div>
          </div>
        </div>
  </div>
      <div class="col-lg-8">
        <div class="row">
            <div class="actions">
              <%= f.submit "Update", class: "btn btn-outline-success" %>
            </div>
          <% end %>

          <h3>Cancel my account</h3>

          <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete ,  class: "btn btn-outline-danger"%></p>

          <%= link_to "Back", :back %>
                  </div></div>
                  