<%#  Listing of all organizations here %>
<%#  Using @orgs here %>

<% @opps.each_with_index do |item, index| %>
    <p> <%= index +1 %> <p>
   <p>Title: <%= item.title %></p>
   <p>Description: <%= item.summary %></p>
   <p>Dates : <%= item.start_date.strftime("%B %d, %Y") %> - <%= item.end_date.strftime("%B %d, %Y") %> </p>
   <p> Ongoing : <% if item.recurrence %>
                YES
                <% else %>
                NO
                <% end %>
            
   <p>Location: <%=item.location%></p>
   Requirements:<%= sanitize item.requirement %>


   <p>Organization : Something</p>
    
<% end %>