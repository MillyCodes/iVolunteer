<%#  Listing of all Opportunities here %>
<%#  Using @orgs here %>

<div class="container">
<h3>Organizations</h3>
<% @orgs.each_with_index do |org, index| %>
<div class="row ">
    <div class="col-lg-12 card-header"><%= link_to org.name, {:action => 'show', :id => org.id} %> - <% @org = org %>
      <%= render "orgs/likes" %>
    </div>


  <div class="col-lg-3 m-auto">
    <% if org.thumbnail? %>
    <%= image_tag org.thumbnail, class: 'w-100' %>
    <% else %>
    <%= image_tag "/assets/default.jpg", class: 'w-100' %>
    <% end %>
  </div>

  <div class="col-lg-9 px-3">
    <div class="card-block px-3">
      <p class="card-text"><%= org.summary %></p>
    </div>
  </div>
</div>
<hr>
<% end %>
</div>
<div><%= paginate @orgs %></div>


