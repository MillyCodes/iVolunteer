


<div class ='form-wrapper'>
  <h1> Edit Profile </h1>
 
      <%= form_with model: @user do |form| %>
        
        <div class="form-group">
          <%= form.text_field :email , placeholder: 'Enter email'%> 
     </div>

     <div class="form-group">
          <%= form.text_field :first_name , placeholder: 'Enter first name'%> 
     </div>

     <div class="form-group">
     <%= form.text_field :last_name , placeholder: 'Enter last name'%>
     </div>

       <div class="form-group">
         <%= form.text_field :location , placeholder: 'Enter location'%>
      </div>
        
    <div class="form-group">
         <%= form.text_field :avatar , placeholder: 'Enter school email'%>
    </div>

      <div class="form-group">
        <%= form.text_area :bio , placeholder: 'Enter bio'%>
      </div>
           
      <div class="form-group">
        <%= form.submit class: "btn btn-light" %>
      </div>
</div>
      <% end %>


      
 
      
 